{
  "compilerOptions": {
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "useUnknownInCatchVariables": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
  ]
}
